---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav class="navbar">
		<h2 class="brand"><a href="/">Weekly Insights</a></h2>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 1rem 2rem;
		background: rgb(var(--white));
		border-bottom: 1px solid rgb(var(--gray-light));
		position: sticky;
		top: 0;
		z-index: 100;
	}
	.brand {
		margin: 0;
		font-size: 1.25em;
		font-weight: 700;
	}

	.brand a,
	.brand a.active {
		text-decoration: none;
		color: var(--accent);
	}
	
	.brand a:hover {
		color: var(--accent-dark);
	}

	.navbar {
		display: flex;
		align-items: center;
		justify-content: flex-start;
		max-width: 1200px;
		margin: 0 auto;
	}

	@media (max-width: 768px) {
		header {
			padding: 0.75rem 1rem;
		}
	}
</style>
